@using OneToFood.Core
@model Restaurant

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>@Model.Name</h3>
    </div>
    <div class="panel-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine.</span>
    </div>
    <div class="panel-footer">
        <a class="btn btn-sm"
           asp-page="./Detail" asp-route-restaurantId="@Model.Id">
            <img src="~/images/show.svg" class="rounded-circle">
        </a>
        <a class="btn btn-sm"
           asp-page="./Edit" asp-route-restaurantId="@Model.Id">
            <img src="~/images/edit.svg" class="rounded-circle">
        </a>
        <a class="btn btn-sm"
           asp-page="./Delete" asp-route-restaurantId="@Model.Id">
            <img src="~/images/delete2.svg" class="rounded-circle">
        </a>
    </div>
</div>
